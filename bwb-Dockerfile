FROM quay.io/cdis/golang:1.17-bullseye as build-deps

ENV CGO_ENABLED=0
ENV GOOS=linux
ENV GOARCH=amd64

WORKDIR $GOPATH/src/github.com/uc-cdis/gen3-client/

COPY go.mod .
COPY go.sum .

RUN go mod download

COPY . .

RUN COMMIT=$(git rev-parse HEAD); \
    VERSION=$(git describe --always --tags); \
    printf '%s\n' 'package g3cmd'\
    ''\
    'const ('\
    '    gitcommit="'"${COMMIT}"'"'\
    '    gitversion="'"${VERSION}"'"'\
    ')' > gen3-client/g3cmd/gitversion.go \
    && go build -ldflags "-s -w" -o /gen3-client

# Store only the resulting binary in the final image
# Resulting in significantly smaller docker image size
FROM alpine:3.17.1
ENV GEN3_CLIENT_VERSION_CHECK=false
RUN adduser --disabled-password -s /bin/bash user
RUN apk add --update --no-cache bash ca-certificates curl
# Create a symlink to make the precompiled utility work with Alpine
RUN ln -s lib lib64 \
    && cd lib \
    && ln -s ld-musl-x86_64.so.1 ld-linux-x86-64.so.2
COPY --from=build-deps /gen3-client /usr/local/bin/
COPY runG3Download.sh /usr/local/bin/runG3Download.sh
